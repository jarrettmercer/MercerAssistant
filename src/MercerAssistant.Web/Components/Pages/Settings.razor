@page "/settings"
@attribute [Authorize(Policy = AppPermission.ViewSettings)]

<PageTitle>Settings - MercerAssistant</PageTitle>

<h2 style="margin-bottom: 8px;">Settings</h2>
<p class="subtitle" style="margin-bottom: 32px;">Profile, timezone, and calendar integrations.</p>

<div style="display: grid; gap: 16px; max-width: 600px;">
    <a href="/settings/booking" style="text-decoration: none;">
        <div class="card">
            <div style="display: flex; align-items: center; gap: 16px;">
                <div style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; background: rgba(217,119,6,0.08); border: 1px solid rgba(217,119,6,0.2); border-radius: 12px; color: var(--colors--primary-color);">
                    <MudIcon Icon="@Icons.Material.Filled.WebAsset" />
                </div>
                <div style="flex: 1;">
                    <MudText Typo="Typo.body1" Style="font-weight: 600;">Booking Page</MudText>
                    <MudText Typo="Typo.body2" Style="color: #636374;">Slug, duration, buffer, and advance booking settings.</MudText>
                </div>
                <MudIcon Icon="@Icons.Material.Filled.ChevronRight" Style="color: #636374;" />
            </div>
        </div>
    </a>

    <div class="card-static" style="opacity: 0.5;">
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; background: rgba(255,255,255,0.03); border: 1px solid var(--colors--border-color); border-radius: 12px; color: var(--colors--gray-color);">
                <MudIcon Icon="@Icons.Material.Filled.Person" />
            </div>
            <div style="flex: 1;">
                <MudText Typo="Typo.body1" Style="font-weight: 600;">Profile & Timezone</MudText>
                <MudText Typo="Typo.body2" Style="color: #636374;">Coming in Phase 5-6.</MudText>
            </div>
        </div>
    </div>

    <div class="card-static" style="opacity: 0.5;">
        <div style="display: flex; align-items: center; gap: 16px;">
            <div style="width: 48px; height: 48px; display: flex; align-items: center; justify-content: center; background: rgba(255,255,255,0.03); border: 1px solid var(--colors--border-color); border-radius: 12px; color: var(--colors--gray-color);">
                <MudIcon Icon="@Icons.Material.Filled.CalendarMonth" />
            </div>
            <div style="flex: 1;">
                <MudText Typo="Typo.body1" Style="font-weight: 600;">Google Calendar</MudText>
                <MudText Typo="Typo.body2" Style="color: #636374;">Coming in Phase 5.</MudText>
            </div>
        </div>
    </div>
</div>
